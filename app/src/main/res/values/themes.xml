<resources>
    <!-- Base application theme. -->
    <style name="Theme.GroceryGo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/purple_700</item>
        <item name="colorOnSurface">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomBottomNavigationSelected" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="CustomBottomNavigationUnselected" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:textSize">10sp</item>
    </style>
</resources>